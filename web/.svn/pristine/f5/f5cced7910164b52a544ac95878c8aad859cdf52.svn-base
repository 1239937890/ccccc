.permanent-main {
  margin-top: .5rem;
}

.permanent-main .top {
  display: flex;
}

@media(max-width: 786px) {
  .permanent-main .top {
    flex-direction: column;
  }
}

.permanent-main .top img {
  margin-right: .5rem;
  margin: 0 .5rem .5rem 0;
  width: 3.8rem;
  height: 2rem;
  border-radius: .05rem;
}

.top-right {
  color: #555555;
  font-size: .18rem;
}

.top-right h3 {
  margin-bottom: .38rem;
  font-size: .24rem;
  font-weight: 600;
}

.top-right p {
  text-align: justify;
}

.top-right .log {
  display: flex;
  flex-wrap: wrap;
  margin-top: .38rem;
}

.top-right .log .item {
  margin: .1rem;
  padding: .1rem .3rem;
  font-size: .16rem;
  color: #5EC1FC;
  border-radius: .05rem;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .6);
}

.permanent-main .main-title {
  margin: .5rem 0;
  font-size: .24rem;
  font-weight: 600;
}

.permanent-main-bottom .main-title-list {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: .5rem;
}

.permanent-main-bottom .main-title-list .item {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 .2rem;
  padding: 0 .15rem;
  height: .6rem;
  font-size: .16rem;
  color: #010101;
  background-color: #FFFFFF;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .6);
}

.container-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: .2rem;
}

.main-title-list .item .num {
  margin-right: .1rem;
  color: #AAAAAA;
  font-weight: 600;
}

.btn-container {
  margin: .1rem;
  padding: .05rem;
  color: #010101;
  border-radius: .05rem;
}

.btn-container .button {
  width: 2rem;
  height: .6rem;
  position: relative;
  background: #fff;
  box-sizing: border-box;
  cursor: pointer;
  text-align: center;
  line-height: .6rem;
}

.btn-container .button::before {
  content: '';
  width: 0;
  height: 0;
  background: #0073FF;
  position: absolute;
  top: -1px;
  right: -1px;
  z-index: 0;
  transition: width .5s, height .5s;
}

.btn-container .button::after {
  content: '';
  width: 0;
  height: 0;
  background: #0073FF;
  position: absolute;
  bottom: -1px;
  left: -1px;
  z-index: 0;
  transition: width .5s, height .5s;
}

.btn-container .button:hover::before {
  width: calc(100% + 2px);
  height: calc(100% + 2px);
}

.btn-container .button:hover::after {
  width: calc(100% + 2px);
  height: calc(100% + 2px);
}

.btn-container .button .button__content {
  height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
  background: #fff;
}

.btn-container .num {
  margin-right: .1rem;
  color: #AAAAAA;
  font-weight: 600;
}

.btn-container:hover {
  color: #0073FF;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .6);
}

.btn-container:hover .num {
  color: #0073FF;
}

.permanent-main-bottom .info {
  text-align: justify;
  color: #555555;
  font-size: .18rem;
}

.permanent-main-bottom .footer-img {
  display: flex;
  /* justify-content: space-between; */
  margin-top: .5rem
}

.permanent-main-bottom .footer-img img {
  width: 8rem;
  height: 5rem;
  border-radius: .05rem;
}

.temp-exhibition {
  color: #0073FF;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, .6);
}

.temp-exhibition .button::before {
  width: calc(100% + 2px);
  height: calc(100% + 2px);
}